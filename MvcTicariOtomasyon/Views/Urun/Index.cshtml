@using MvcTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index","Urun",FormMethod
    .Get))
            {
                <p>
                    Ürün Adı:@Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>

    </tr>
    @foreach (var u in Model)
    {
<tr>
    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat ₺</td>
    <td>@u.SatisFiyat ₺</td>
    <td>@u.Kategori.KategoriAd</td>

    <td>
        <img src="@u.UrunGorsel" style="width:200px; height:150px; " />
    </td>
    <td>
        <a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-warning">Güncelle</a>
    </td>
    <td>
        <a href="/Urun/SatisYap/@u.UrunID" class="btn btn-default" style="background-color:aquamarine">Satış Yap</a>
    </td>
</tr>
    }

</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>

