@model MvcTicariOtomasyon.Models.Siniflar.Cariler
@using (Html.BeginForm("Update", "CariPanel", FormMethod.Post))
{
    <form class="form-horizontal">


        @Html.HiddenFor(cari => cari.Cariid, new { @class = "form-control" })


        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Adınız</label>

            <div class="col-sm-10">
                @Html.TextBoxFor(cari => cari.CariAd, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Soyadı</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(cari => cari.CariSoyad, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">Şehri</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(cari => cari.CariSehir, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Eposta Adresi</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(cari => cari.CariMail, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifresi</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(cari => cari.CariSifre, new { @class = "form-control" })

            </div>

        </div>


        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Güncelle</button>

            </div>

        </div>

    </form>
}

