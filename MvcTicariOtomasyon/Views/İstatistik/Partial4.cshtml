@model IEnumerable<MvcTicariOtomasyon.Models.Siniflar.SinifGrup3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int value = 0;}
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@{value++;} @value</td>
                        <td>@item.marka</td>
                        <td>
                            @if (item.sayi >= 1 && item.sayi <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-success" style="width: @item.sayi%"></div>
                                </div>
                            }
                            else if (item.sayi >= 6 && item.sayi <= 12)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @item.sayi%"></div>
                                </div>
                            }
                        </td>
                        @if (item.sayi >= 1 && item.sayi <= 6)
                        {
                            <td><span class="badge bg-success">@item.sayi</span></td>

                        }
                        else if (item.sayi >= 6 && item.sayi <= 12)
                        {
                            <td><span class="badge bg-warning">@item.sayi</span></td>

                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>


